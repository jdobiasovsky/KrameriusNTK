<tools>
    <data type="boolean" key="xhtml" value="true"/>
    <data type="boolean" key="isSimple" value="true"/>
    <data type="number" key="version" value="2.0"/>
    <toolbox scope="request">
        <tool key="esc" class="org.apache.velocity.tools.generic.EscapeTool" />
        <tool key="import" class="org.apache.velocity.tools.view.ImportTool" />
        <tool class="org.apache.velocity.tools.generic.ConversionTool"
              dateFormat="yyyy-MM-dd"/>

        <tool key="i18n" class="cz.incad.kramerius.client.tools.I18NTool" />
        <tool key="texts" class="cz.incad.kramerius.client.tools.TextsTool" />

        <tool key="jsonDictionary" class="cz.incad.kramerius.client.tools.json.JSONDictionary" />
        <tool key="jsonTexts" class="cz.incad.kramerius.client.tools.json.JSONTexts" />

        <tool key="link" class="org.apache.velocity.tools.view.LinkTool" />
        <tool key="date" class="org.apache.velocity.tools.generic.DateTool" />
        <tool class="org.apache.velocity.tools.view.ParameterTool" />
        <tool class="cz.incad.kramerius.client.tools.CSSTool"
              bundles="res.css"
              key="css"/>
        <tool class="cz.incad.kramerius.client.tools.ConfTool"
              key="conf"/>
        <tool class="cz.incad.kramerius.client.tools.UTFSortTool"
              key="utfsort"/>
              
        <tool key="item" class="cz.incad.kramerius.client.tools.Item" />
        <tool key="search" class="cz.incad.kramerius.client.tools.Search" />

        <!--  files collects -->
        <tool key="fmap" class="cz.incad.kramerius.client.tools.FilesCollect" />
     
        <!--  logged user -->
       <tool key="logControl" class="cz.incad.kramerius.client.tools.LoggedController" />

        <!--  sessions  -->
        <tool key="sessionControl"
            class="cz.incad.kramerius.client.tools.SessionController" />

        <!--  share -->
        <tool key="share" class="cz.incad.kramerius.client.tools.Share" />

    </toolbox>
    <toolbox scope="session">
        <tool key="map" class="java.util.HashMap"/>
    </toolbox>
</tools>